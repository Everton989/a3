CREATE TABLE usuarios (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(100) NOT NULL,
    email VARCHAR(100) NOT NULL,
    usuario VARCHAR(50) NOT NULL,
    senha VARCHAR(100) NOT NULL,
    isAdmin TINYINT(1) DEFAULT 0
);

CREATE TABLE pdf_metadata (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(100) NOT NULL,
    descricao VARCHAR(255),
    tamanho INT,
    criado_em TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    criado_por VARCHAR(50),
    modificado_em TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    modificado_por VARCHAR(50),
    visibilidade ENUM('ADMIN', 'COMUM') NOT NULL
);
CREATE TABLE pdf_arquivos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    pdf_blob LONGBLOB NOT NULL,
    FOREIGN KEY (id) REFERENCES pdf_metadata(id) ON DELETE CASCADE
);
